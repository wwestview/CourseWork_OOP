<Window x:Class="CourseWork_OOP.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork_OOP" 
        xmlns:v="clr-namespace:CourseWork_OOP.Services"
        mc:Ignorable="d"
        Title="Генератор Титульних Сторінок" Height="650" Width="500">
<Grid Margin="15">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Label Grid.Row="0" Grid.Column="0" Content="Університет:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding University, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="1" Grid.Column="0" Content="Факультет:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding Faculty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="2" Grid.Column="0" Content="Кафедра:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding Department, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="3" Grid.Column="0" Content="Дисципліна:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Text="{Binding Discipline, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="4" Grid.Column="0" Content="Тема роботи:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Text="{Binding Topic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="5" Grid.Column="0" Content="ПІБ студента:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="5" Grid.Column="1" Margin="5" Text="{Binding StudentFullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="6" Grid.Column="0" Content="Група студента:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Text="{Binding StudentGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="7" Grid.Column="0" Content="ПІБ керівника:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="7" Grid.Column="1" Margin="5" Text="{Binding SupervisorFullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="8" Grid.Column="0" Content="Посада керівника:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="8" Grid.Column="1" Margin="5" Text="{Binding SupervisorPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="9" Grid.Column="0" Content="Місто:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="9" Grid.Column="1" Margin="5" Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Label Grid.Row="10" Grid.Column="0" Content="Рік:" VerticalAlignment="Center"/>
    <TextBox Grid.Row="10" Grid.Column="1" Margin="5" Text="{Binding Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    <Button Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Content="Згенерувати Титульні Сторінки"
                Command="{Binding GenerateCoverPagesCommand }"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10,5"/>

    <StatusBar Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2">
        <StatusBarItem>
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBarItem>
    </StatusBar>

</Grid>
</Window>